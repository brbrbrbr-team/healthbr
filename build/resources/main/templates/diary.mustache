<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../style.css ">

      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

      <script src="inputmask.js"></script>
      <script src="/main.js"></script>
</head>

<body>
    <div class="container text-center">
        <div class="container text-center mb-4">
            <h1>Дневник</h1>
        </div>
        <div class="container text-center mx-0 px-0">

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Передача показаний</h5>
                </div>
                <div class="card-body">
                    <form class="form-signin" action="/diary" method="post">
                        <div class="form-group">
                            <label for="inputPressureTop" class="form">Верхнее давление</label>
                            <input type="number" name="topPressure" id="inputPressureTop" class="form-control" required="" autofocus="">
                        </div>

                        <div class="form-group">
                            <label for="inputPressureBottom">Нижнее давление</label>
                            <input type="number" name="bottomPressure" id="inputPressureBottom" class="form-control" required="">
                        </div>

                        <div class="form-group">
                            <label for="inputMessage">Самочувствие</label>
                            <textarea name="message" id="inputMessage" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="inputDatetime">Время измерения</label>
                            <input type="datetime-local" name="" id="inputDatetime" class="form-control" required="" value="">
                        </div>

                        <button class="btn btn-lg btn-primary btn-block form-control" type="submit">Отправить показания</button>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Рекомендации</h5>
                </div>
                <div class="card-body">

                    {{#recommendations}}
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">{{sentAt}}</h5>
                                <p class="card-text">{{text}}</p>
                            </div>
                        </div>
                    {{/recommendations}}

                    {{^recommendations}}
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Нет рекомендаций</h5>
                            </div>
                        </div>
                    {{/recommendations}}

                </div>
            </div>
        </div>
    </div>
</body>
</html>